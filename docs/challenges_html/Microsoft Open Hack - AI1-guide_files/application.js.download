        var height = $(element).height();
        $(element).block({
            //message: "<img src='" + imageUrl + "' width='100' height='100'/>",
            message: "<img src='" + imageUrl + "'/>",
            css: {
                padding: 0,
                margin: 0,
                width: '10%',
                top: '40%',
                left: '35%',
                textAlign: 'center',
                color: '#000',
                border: '0px',
