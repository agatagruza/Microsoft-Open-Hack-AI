            },
            overlayCSS: { backgroundColor: 'none', opacity: 0 }
        });
    },
    hideLoadingIcon : function (element)
    {
        $(element).unblock();
    },
    blockUI: function (element, block) {//A boolean argument set to block or not
        if (block) {
            var imageUrl = opsgility.getBaseURL() + "/Content/Images/spinner.gif";
            var width = $(element).width();
            var height = $(element).height();
            var isUIBlocked = false;
            var requestCount = 0;

            $(document).ajaxSend(function (event, jqXHR, settings) {
                if (!settings.blockUI) {
                    return;
                }

                requestCount++;
                isUIBlocked = true;

                $(element).block({
                    //message: "<img src='" + imageUrl + "' width='100' height='100'/>",
                    message: "<img src='" + imageUrl + "'/>",
                    css: {
                        padding: 0,
                        margin: 0,
                        width: '10%',
                        top: '40%',
                        left: '35%',
                        textAlign: 'center',
                        color: '#000',
                        border: '0px',
                        cursor: 'wait',
                        opacity: 0.6,
                        background: 'none',
                        baseZ: 9999999
                    },
                    overlayCSS: { backgroundColor: 'none', opacity: 0 }
                });
            });

            $(document).ajaxComplete(function (event, jqXHR, settings) {
                if (requestCount > 0) {
                    requestCount--;
                }

                if (requestCount <= 0) {
                    isUIBlocked = false;
                    $(element).unblock();
                }
            });
        }
    },
